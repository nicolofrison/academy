{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": ["error", 2,
            {
                "FunctionDeclaration": {"body": 2, "parameters": 2}
            }
        ]
    },
    "overrides": [
        {
            "files": ["src/**.ts"],
            "rules": {
                "indent": ["error", 2,
                    {
                        "FunctionDeclaration": {"parameters": 2},
                        "FunctionExpression": {"parameters": 2}
                    }
                ]
            }
        }
    ]
}
